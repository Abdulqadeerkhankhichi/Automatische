

@{
    Layout = null;
    string Succ = @ViewBag.Success;
    string Delete = @ViewBag.Error;

}

<!doctype html>
<html lang="en" dir="ltr">


<!-- Mirrored from www.pixelwibes.com/template/vsparks/html/dist/forgot-password.html by HTTrack Website Copier/3.x [XR&CO'2014], Wed, 21 Dec 2022 08:00:02 GMT -->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <title>Forgot Password</title>
    <!-- Bootstrap Core and Font Icon -->
    <link rel="stylesheet" href="~/assets/plugins/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/plugins/animate-css/vivify.min.css" />
    <link rel="stylesheet" href="~/assets/plugins/font-awesome/css/font-awesome.min.css">
    <!-- Core css -->
    <link rel="stylesheet" href="~/assets/css/main.css" />
</head>

<body class="theme-blush">
    <!-- main content-->
    <div class="auth">
        <div class="container">
            <div class="forms-container">
                <div class="signin-signup forgot-page">
                    

                    <form class="sign-in-form" method="post" action="@Url.Action("ForgetPassword", "Account")">
                        <h2 class="title">Forgot password</h2>
                        <div style="display:none;" class="alert alert-success alert-dismissible fade show" id="SuccessAlert" role="alert">
                            @ViewBag.Success
                        </div>
                        <div style="display:none;" class="alert alert-danger alert-dismissible fade show" id="error" role="alert">
                            @ViewBag.Error
                        </div>
                        <div class="input-field">
                            <i class="fa fa-lock"></i>
                            <input type="email" placeholder="Enter Mail" id="Email" name="Email" autofocus required />
                        </div>
                        <input style="width:60%" type="submit" value="Send Mail" class="btn solid" />
                        <p class="social-text text-center">Enter the email address you used when you joined and <br>we'll send you instructions to reset your password.</p>
                    </form>

                </div>
            </div>

            <div class="panels-container">
                <div class="panel left-panel">

                    <div class="content">
                        <img src="~/assets/images/logo-icon.svg" width="100" alt="logo-icon" class="image" />
                        <h3>Build digital products with</h3>
                        <p>
                            Build, run, and scale your digital designs of gardens - end to end  and more
                        </p>
                        <a href="@Url.Action("Login","Account")">
                            <button class="btn transparent" id="sign-up-btn">
                                Back to Sign in
                            </button>
                        </a>
                    </div>
                </div>
                <div class="panel right-panel">

                    <div class="content">
                        <img src="~/assets/images/logo-icon.svg" width="100" alt="logo-icon" class="image" />
                        <h3>Build digital designs with</h3>
                        <p>
                            Build, run, and scale your digital designs of gardens - end to end  and more.
                        </p>
                        <button style="width:40%" class="btn transparent" id="sign-in-btn">
                            Forgot Password
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/assets/bundles/libscripts.bundle.js"></script>
    <script src="~/assets/js/page/auth.js"></script>


    <script>

        $(document).ready(function () {
             if ("@Succ"!="") {
            $('#SuccessAlert').fadeIn();
            $('#SuccessAlert').fadeOut(10000);
            }
            else {
                $('#SuccessAlert').fadeOut();
            }
            if ("@Delete" != "") {
                $('#error').fadeIn();
                $('#error').fadeOut(10000);
            }
            else {
                $('#error').fadeOut();
            }

        });
    </script>
</body>

