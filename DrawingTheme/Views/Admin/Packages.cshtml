
@{
    ViewBag.Title = "Packages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="block-header py-lg-2 py-2">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-4 col-sm-12">
                <h4>Pricing</h4>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="index.html">
                            <i class="fa fa-dashboard"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item active">Pricing</li>
                </ul>
            </div>
            <div class="col-lg-6 col-md-8 col-sm-12">
                <ul class="nav nav-tabs tab-body-header rounded justify-content-end" role="tablist">

                    <div class="page_action">
                        <button type="button" class="btn btn-primary" data-toggle="modal"
                                data-target="#addRoleModal">
                            <i class="fa fa-calendar-o mr-1" aria-hidden="true"></i>
                            Add New
                        </button>

                    </div>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Body: Body -->
<div class="body d-flex pricing">
    <div class="container-fluid">
        <div class="row clearfix row-deck mb-5">
            <div class="col-lg-3 col-md-6 col-sm-12 mb-5">
                <div class="card text-center free-card">
                    <div class="price-info">
                        <span>Free</span>
                        <h1>$0</h1><span>Month</span>
                    </div>
                    <div class="price-details">
                        <ul>
                            <li>2 GB video storage (ie, about 50 minutes of videos*)</li>
                            <li>1 review per week</li>
                        </ul>
                        <button class="btn btn-lg" type="button"> Get Now</button>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 mb-5">
                <div class="card text-center basic-card">
                    <div class="price-info ">
                        <span>Basic</span>
                        <h1>$12</h1><span>Month</span>
                    </div>
                    <div class="price-details">
                        <ul>
                            <li>50 GB video storage (ie, about 1,000 minutes of videos*)</li>
                            <li>Unlimited reviews</li>
                        </ul>
                        <button class="btn btn-lg" type="button"> UPGRADE</button>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 mb-5">
                <div class="card text-center pro-card">
                    <div class="price-info ">
                        <span>pro</span>
                        <h1>$24</h1><span>Month</span>
                    </div>
                    <div class="price-details">
                        <ul>
                            <li>250 GB video storage (ie, about 5,000 minutes of videos*)</li>
                            <li>Unlimited reviews</li>
                            <li>Support for 4k resolution videos</li>
                        </ul>
                        <button class="btn btn-lg" type="button"> UPGRADE</button>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 mb-5">
                <div class="card text-center ultra-card">
                    <div class="price-info ">
                        <span>Ultra</span>
                        <h1>$48</h1><span>Month</span>
                    </div>
                    <div class="price-details">
                        <ul>
                            <li>500 GB video storage (ie, about 10,000 minutes of videos*)</li>
                            <li>Unlimited reviews</li>
                            <li>Support for 4k resolution videos</li>
                        </ul>
                        <button class="btn btn-lg" type="button"> UPGRADE</button>
                    </div>
                </div>
            </div>
        </div><!-- row end-->
    </div>
</div>

<div class="modal fade " id="addRoleModal" tabindex="-1" role="dialog">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content p-3 p-md-5">

            <div class="modal-body">
                <div class="text-center mb-4">
                    <h3 class="role-title">Add New Package</h3>
                    <p>Set package permissions</p>
                </div>
                <!-- Add role form -->
                <form id="addRoleForm" class="row g-3 fv-plugins-bootstrap5 fv-plugins-framework" onsubmit="return false" novalidate="novalidate">
                    <div class="col-6 mb-4 fv-plugins-icon-container">
                        <label class="form-label" for="modalRoleName">Package Name</label>
                        <input type="text" id="modalRoleName" name="modalRoleName" class="form-control" placeholder="Enter a Package name" tabindex="-1">

                    </div>
                    <div class="col-6 mb-4 fv-plugins-icon-container">
                        <label class="form-label" for="modalRoleName">Description</label>
                        <input type="text" id="modalRoleName" name="modalRoleName" class="form-control" placeholder="Enter a role name" tabindex="-1">

                    </div>
                    <div class="col-6 mb-4 fv-plugins-icon-container">
                        <label class="form-label" for="modalRoleName">Package Type</label>
                        <div class="form-group multiselect_div">
                            <select id="single-selection" name="single_selection"
                                    class="form-control">
                                <option value="cheese">Monthly</option>
                                <option value="tomatoes">Yearly</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-6 mb-4 fv-plugins-icon-container">
                        <label class="form-label" for="modalRoleName">Package Price</label>
                        <input type="text" id="modalRoleName" name="modalRoleName" class="form-control" placeholder="Enter Price" tabindex="-1">

                    </div>
                    <div class="col-12">
                        <h5>Package Permissions</h5>
                        <!-- Permission table -->
                        <div class="table-responsive">
                            <table class="table table-flush-spacing">
                                <tbody>

                                    <tr>
                                        <td class="text-nowrap">User Management</td>
                                        <td>
                                            <div class="d-flex">
                                                <div class="form-group">
                                                    <input class="custom-control-input" type="checkbox" id="userManagementRead">
                                                    <label class="custom-control-label" for="userManagementRead">

                                                        Read
                                                    </label>

                                                </div>

                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-nowrap">Content Management</td>
                                        <td>
                                            <div class="d-flex">
                                                <div class="form-group">
                                                    <input class="custom-control-input" type="checkbox" id="contentManagementRead">
                                                    <label class="custom-control-label" for="contentManagementRead">
                                                        Read
                                                    </label>
                                                </div>

                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-nowrap">Disputes Management</td>
                                        <td>
                                            <div class="d-flex">
                                                <div class="form-group">
                                                    <input class="custom-control-input" type="checkbox" id="dispManagementRead">
                                                    <label class="custom-control-label" for="dispManagementRead">
                                                        Read
                                                    </label>
                                                </div>

                                            </div>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="text-nowrap">Repository Management</td>
                                        <td>
                                            <div class="d-flex">
                                                <div class="form-group">
                                                    <input class="custom-control-input" type="checkbox" id="repoRead">
                                                    <label class="custom-control-label" for="repoRead">
                                                        Read
                                                    </label>
                                                </div>

                                            </div>
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                        <!-- Permission table -->
                    </div>
                    <div class="col-12 text-right">
                        <button type="submit" class="btn btn-primary me-sm-3 me-1">Submit</button>
                        <button type="reset" class="btn btn-secondary" aria-label="Close">Cancel</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal" aria-label="Close">Close</button>
                    </div>
                    <div></div><input type="hidden">
                </form>
                <!--/ Add role form -->
            </div>
        </div>
    </div>
</div>

<script src="~/assets/js/jquery-3.2.1.min.js"></script>
