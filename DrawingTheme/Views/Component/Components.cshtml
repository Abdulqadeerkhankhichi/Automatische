<script src="~/assets/js/jquery-3.2.1.min.js"></script>
<script>

    $(document).on("click", "#DeleteUser", function () {
        //alert();
        var currentRow = $(this).closest("tr");
        $("#DeleteComponentId").val(currentRow.find("td:eq(0)").text());
       /* $("#DeleteUserModal").toggle();*/

    });


    $(document).on("click", "#AddUser", function () {
        $("#defaultModalLabel").text("Add Component");
        $("#ComponentId").val('');
        $("#Name").val('');
        $("#Code").val('');
        $("#Price").val('');
       
        $('#isActive').prop('checked', false);
        //var myModal = $('#offcanvasAddUser');
        //$('#offcanvasAddUser').css("visibility", "visible");
        //$('#offcanvasAddUser').addClass("show");
        //$('#AddUSerBody').css("visibility", "visible");
    });


    $(document).on("click", "#EditUser", function () {
        @*var model1 = '@Html.Raw(Json.Encode(ViewBag.CategoryList))';
        var data = JSON.parse(model1);*@
        var currentRow = $(this).closest("tr");


        //alert(currentRow.find("td:eq(2)").text());

        $("#defaultModalLabel").text("Edit Component");
        var ComponentId = currentRow.find("td:eq(0)").text();
        $("#ComponentId").val(ComponentId);
        $("#Name").val(currentRow.find("span:eq(0)").text());
        $("#Code").val(currentRow.find("td:eq(2)").text());
        $("#Price").val(currentRow.find("span:eq(1)").text());
       
        if (currentRow.find("span:eq(2)").text()=="True") {
            $('#isActive').prop('checked', true);
        }
        else {
            $('#isActive').prop('checked', false);
        }

    });

    $(document).ready(function () {


        if ("@Succ"!="") {
            $('#SuccessAlert').fadeIn();
            $('#SuccessAlert').fadeOut(10000);
        }
        else {
            $('#SuccessAlert').fadeOut();
        }
        if ("@Update" != "") {
            $('#UpdateAlert').fadeIn();
            $('#UpdateAlert').fadeOut(10000);
        }
        else {
            $('#UpdateAlert').fadeOut();
        }
        if ("@Delete" != "") {
            $('#DeleteAlert').fadeIn();
            $('#DeleteAlert').fadeOut(10000);
        }
        else {
            $('#DeleteAlert').fadeOut();
        }
        if ("@Error" != "") {
            $('#error').fadeIn();
            $('#error').fadeOut(10000);
        }
        else {
            $('#error').fadeOut();
        }


        $('#ScrapperList').DataTable({
            searching: true,
            "ordering": false
        });

        $(".nav1 li").removeClass("active");
        $('#Component').addClass('active');

    });
</script>