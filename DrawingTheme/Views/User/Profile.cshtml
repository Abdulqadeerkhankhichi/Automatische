
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="block-header py-lg-2 py-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 col-md-4 col-sm-12">
                <h4>Profile</h4>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="index.html">
                            <i class="fa fa-dashboard"></i>
                            Dashboard
                        </a>
                    </li>

                    <li class="breadcrumb-item active">Profile</li>
                </ul>
            </div>
            <div class="col-lg-6 col-md-8 col-sm-12">
                <ul class="nav nav-tabs tab-body-header rounded justify-content-end" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#usersettings"
                           role="tab">User-settings</a>
                    </li>


                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Body: Body -->
<div class="body d-flex profile-page">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12">
                <div class="card active-bg overflowvisible profile-main">
                    <div class="card-body profile-header p-0">
                        <div class="back-profile" style="height:150px !important">

                        </div>
                        <div class="detail">
                            <div class="u-profile-img m-r-20">
                                <img src="~/assets/images/user.png" class="rounded img-raised"
                                     alt="User">
                            </div>
                            <div class="u_name" style="color:black !important">
                                <h4 class="mb-0"><strong>Katie </strong>Clark</h4>
                                <span>Administrator</span>
                                <input type="file" class="form-control-file" id="exampleInputFile"
                                       aria-describedby="fileHelp">
                            </div>
                         
                        </div>
                    </div>
                </div>
                <div class="tab-content ">


                    <div role="tabpanel" class="tab-pane active" id="usersettings">

                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title"><strong>Account</strong> Settings</h3>
                            </div>
                            <div class="card-body pt-0">
                                <div class="row clearfix">
                                    <div class="col-lg-4 col-md-12">
                                        <div class="form-group">
                                            <input type="text" class="form-control"
                                                   placeholder="Katie">
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-12">
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Clark">
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-12">
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="E-mail">
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-12">
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Phone">
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-12">
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="City">
                                        </div>
                                    </div>

                                    <div class="col-lg-4 col-md-12">
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Country">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <textarea rows="4" class="form-control no-resize"
                                                      placeholder="Address Line 1"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="checkbox">
                                            <input id="procheck1" type="checkbox">
                                            <label for="procheck1">Profile Visibility For Everyone</label>
                                        </div>

                                    </div>
                                    <div class="col-md-12">
                                        <button class="btn btn-primary btn-round">Save Changes</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title"><strong>Security</strong> Settings</h3>
                            </div>
                            <div class="card-body pt-0">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Username">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control"
                                           placeholder="Current Password">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" placeholder="New Password">
                                </div>
                                <button class="btn btn-info btn-round">Save Changes</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- .row End -->
    </div>
</div>
<script src="~/assets/js/jquery-3.2.1.min.js"></script>
<script>

    $(document).ready(function () {

        $('#ScrapperList').DataTable({
            searching: true,
            "ordering": false
        });

        $(".nav1 li").removeClass("active");
        $('#Profile').addClass('active');

    });
</script>