@{ 
    int RoleId = ViewBag.RoleId;
}



<div class="block-header py-lg-2 py-2">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-4 col-sm-12">
                <h4>Dashboard</h4>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="index.html">
                            <i class="fa fa-dashboard"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ul>
            </div>

        </div>
    </div>
</div>
<!-- Body: Body -->
<div class="body d-flex ">
    <div class="container-fluid">

        <div class="row clearfix row-deck">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Total Transaction</h3>
                    </div>
                    <div class="card-body pt-0">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Successful: <small>@ViewBag.TotalSuccessfull</small></h6>
                            </div>
                            <div class="col-md-6">
                                <h6>Pending: <small>@ViewBag.TotalPending</small></h6>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            @if (RoleId == 1)
            {
            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Total Customers</h3>
                    </div>
                    <div class="card-body pt-0">
                        <h6>Customers: <small>@ViewBag.TotalCustomer</small></h6>

                    </div>
                </div>
            </div>

                <div class="col-md-3">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Total Components</h3>
                        </div>
                        <div class="card-body pt-0">
                            <h6>components: <small>@ViewBag.TotalComponent</small></h6>

                        </div>
                    </div>
                </div>

            }
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Total Paid Amount</h3>
                        </div>
                        <div class="card-body pt-0">
                            <h6>Amount: <small>@ViewBag.TotalSuccessfullAmount</small></h6>

                        </div>
                    </div>
                </div>

            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Total Pending Amount</h3>
                    </div>
                    <div class="card-body pt-0">
                        <h6>Amount: <small>@ViewBag.TotalPendingAmount</small></h6>

                    </div>
                </div>
            </div>
